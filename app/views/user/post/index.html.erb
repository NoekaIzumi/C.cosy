<main>
  <div class = "title">
  
  </div>
  
  <div class = "side-bar">
  
  </div>

  <div class = "container">
    <%= form_with(url: user_post_index_path, method: :get, local: true) do |form| %>
      <%= form.text_field :keyword, value: params[:keyword] %>
      
      <%= form.collection_select :tag_id, Tag.all, :id, :name, { include_blank: '--タグで絞り込み検索--', selected: params[:tag_id] }, { } %>
      
      <%= form.submit "検索" %>
    <% end %>
  

    <table class="table table_index">
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td colspan="6"> <!-- 6列を占めるtd要素 -->
            <%= link_to  user_post_path(post) do %>
              <div class="post-container"> <!-- 新しいdiv要素を追加 -->
                <table> <!-- 投稿ごとのテーブルを作成 -->
                  <tr>
                    <td><%= post.restaurant_name %></td>
                  </tr>
                  <tr>
                    <th style="text-align: left;">予算：</th><td><%= post.budget %>円</td>
                    <th>&nbsp;最寄り駅：</th><td><%= post.closest %>駅</td>
                    <th>&nbsp;最寄駅からの距離：</th><td><%= post.distance %></td>
                  </tr>
                  <tr>
                    <th style="text-align: left;">このお店につけられたタグ：</th>
                    <td>
                      <% post.tags.each do |tag| %>
                        <%= tag.name %>
                      <% end %>
                    </td>
                  </tr>
                </table>
              </div> <!-- div要素の終了タグを追加 -->
              <% end %>
            </td>
          </tr>
          <tr> <!-- 新しい行を追加 -->
            <td colspan="6"></td> <!-- 6列を占める空のセルを追加 -->
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</main>
