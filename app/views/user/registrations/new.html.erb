  <style>
 header,side_bar{
   display: none;
 }

   main {
      margin-top: auto;
      display:flex;
      justify-content: center;
   }

   .content {
      text-align: left;
      margin: 0 auto;
      width: auto !important;
      max-width: none !important;
   }
 </style>

 <main>
   <div class = "content">
    <div class = "title">
      <h2>ユーザー登録</h2>
    </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "user/shared/error_messages", resource: resource %>

       <div class="field">
        <%= f.label :ユーザー名 %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "user_name" %>
      </div>

      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

     <div class="field">
       <%= f.label :password_confirmation, "パスワード（確認用）" %><br />
       <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

      <div class="actions">
        <%= f.submit "ユーザー登録" ,class: "btn btn-success"%>
      </div>
    <% end %>

<%= render "user/shared/links" %>
   </div>
 </main>
