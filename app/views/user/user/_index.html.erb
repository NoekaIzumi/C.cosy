<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>ユーザー名</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= link_to user_user_path(user) do %>
            <% if user.image.present? %>
              <%= image_tag user.image,size: "100x100" %>
            <% else %>
              <%= image_tag 'guest.png'%>
             <% end %>
          <% end %>
        </td>
        <td><%= user.name %></td>
        <td>フォロー数: <%= user.followers.count %></td>
        <td>フォロワー数: <%= user.followereds.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>