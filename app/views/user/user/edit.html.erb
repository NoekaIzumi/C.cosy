<main>
  <div class = "content">
    <div class = "title">
      <p>ユーザー情報を編集する</p>
    </div>
      <%= form_with(model: @user, local: true, url: user_user_path(id: @user.id) ) do |f| %>
        <table>
          <tr>
            <th>プロフィール画像</th>
            <td><%= f.file_field :image, accept: "image/*" %></td>
          </tr>
          <tr>
            <th>ユーザー名</th>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= f.email_field :email %></br></td>
          </tr>
        </table>


        <div class = "button">
          <%= f.submit '  変更する  ',class: "btn btn-success" %>
      <% end %>
        </div>
  </div>
</main>
  </div>