<header>
<script src="https://kit.fontawesome.com/153870c081.js" crossorigin="anonymous"></script>
  <div class = "icon">
   <%= link_to search_path do %>
    <i class="fas fa-search"></i>
   <% end %>
  </div>

  <div class = "logo">
            <%= link_to posts_path do %>
              <%= image_tag 'logo.png', size: "100x100" %>
            <% end %>
  </div>

  <div class = "header">

  <% if user_signed_in? %>
  <div class = "button">
   <%= button_to "About",  about_path, method: :get, data: { turbo_frame: "homes" },class: 'btn btn-default btn-outline' %>
  </div>
  <div class = "button">
   <%= button_to "ログアウト",  destroy_user_session_path,  method: :delete,data: { turbo_frame: "users" },class: 'btn btn-default btn-outline' %>
  </div>
   <div class = "icon">
            <%= link_to new_user_post_path do %>
              <%= image_tag 'pen.jpeg', size: "30x30" %>
            <% end %>
   </div>
  <% else %>
   <%= link_to "About", about_path , class: 'btn btn-default' %>
   <%= link_to "新規登録", new_user_registration_path , class: 'btn btn-default' %>
  <% end %>
  </div>

</header>

<style>


  div {
  	 display: inline-block;
  }


  .icon {
    margin:30px;
  }

  .logo {
  	margin-right: 150px;
  	margin-left:  250px;
  }


  .header {
  padding-right : 20px;
  margin-top: 20px;
  margin-bottom: 60px;
  width: 450px;
  }

  form.button_to {
    width:100px;
    margin:20px;
  }

  .btn-outline {
  background-color: transparent;
  color: #000000; /* ボタンのテキストカラー */
  border-color: transparent;

  .table {
    margin-top:30px;
  }
}
</style>

キーワード検索
 <%= form_with(model: Post, method: :get) do |form| %>
  <%= form.text_field :keyword %>
  <%= form.submit "検索" %>
<% end %>

タグ検索
<p id="notice"><%= notice %></p>

<%= form_tag posts_path, method: :get, class: 'boards__searchForm' do %>
      <%= select_tag :tag_id,
                     options_from_collection_for_select(Tag.all, :id, :name, params[:tag_id]),
                     {
                       prompt: 'タグで絞り込み検索',
                       onchange: 'submit(this.form);'
                     }
      %>
    <% end %>