 <% if post.published? %>
   <%= link_to  user_post_path(post) do %>
   <div class = "container">
       <div class="post-container">
        <div class="post-info">
            <div><h4><%= post.restaurant_name %></h4></div>
            <div><strong>予算： </strong><%= post.budget %>円</div>
            <div><strong>最寄り駅： </strong><%= post.closest %>駅</div>
            <div><strong>最寄駅からの距離： </strong><%= post.distance %></div>
            <div><strong>このお店につけられたタグ：</strong></div>
            <div class="tag-list">
              <% post.tags.each do |tag| %>
                <span><%= tag.name %></span>
              <% end %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  <% else %>
   <div class = "container">
       <div class="post-container">
        <div class="post-info">
            <div><h4><%= post.restaurant_name %></h4></div>
            <div><strong>予算： </strong><%= post.budget %>円</div>
            <div><strong>最寄り駅： </strong><%= post.closest %>駅</div>
            <div><strong>最寄駅からの距離： </strong><%= post.distance %></div>
            <div><strong>このお店につけられたタグ：</strong></div>
            <div class="tag-list">
              <% post.tags.each do |tag| %>
                <span><%= tag.name %></span>
              <% end %>
              <div class="post-delete">
                <%= button_to "削除", user_post_destroy_path(post), method: :delete,form: { data: { turbo_confirm: '本当に削除しますか?' }}, class: "btn-sm btn-danger" %>
              </div>
               <div clas = "edit">
                <%= button_to "投稿を編集する" ,edit_user_post_path(post), method: :get, data: { turbo_frame: "posts" },class: 'btn btn-default' %>
              </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>