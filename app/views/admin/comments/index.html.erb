<%= stylesheet_link_tag 'admin' %>
<%= render partial: "layouts/admin_header" %>

<div class="container mt-5">
  <P>コメント一覧</P>
<table class="table mt-3">
  <tr>
    <th class="col-8">コメント</th>
    <th class="col-1"></th>
    <th class="col-1"></th>
  </tr>
<% @comments.each do |comment| %>
  <tr>
    <td class="col-8"><%= comment.comment %></td>
    <td class="col-1"><%= comment.created_at.strftime('%Y/%m/%d/%H:%M') %></td>
    <td class="col-1">
    <%= button_to '削除', admin_user_comment_path(comment.user, comment), method: :delete, form: { data: { turbo_confirm: '本当に削除しますか?' }},class: "btn btn-sm btn-danger" %>
    </td>
  </tr>
<% end %>
</table>

</div>