<%= stylesheet_link_tag 'admin' %>

<%= render partial: "layouts/admin_header" %>
<%= render partial: "layouts/admin_side_bar" %>

<style>

side_bar {
  flex: 1;
  margin-left: 5px;
}

   main {
   text-align: left;
   width: 60%;
   flex: 2;
  }

  .sub-title {
    justify-content: le;
    margin-left:20px;
  }

  .container {
  display: flex;
  justify-content: center; /* container内を中央揃えにする */
}
</style>

<main>
    <div class = "sub-title">
      <p><%= @user.name %>がフォロー中のユーザー</p>
    </div>
    <% if @users.exists? %>
      <%= render "user/user/index", users: @users %>
    <% else %>
      <p>フォロー中のユーザーはいません</p>
    <% end %>
</main>